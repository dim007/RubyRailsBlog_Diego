<%= form_with(model: [ @article, @article.comments.build ], local:true) do |form| %>
    <%= react_component "CommentForm", comment: [ @article, @article.comments.build ] %>

    <p>
        <%= form.label :commenter %><br>
        <%= form.text_field :commenter %>
    </p>
    <p>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
    </p>
    <p>
        <%= form.submit %>
    </p>
    
<% end %>