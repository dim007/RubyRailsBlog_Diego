<%-# _form is a view a 'partial' to remove duplicate code in EditArticle & NewArt-%>

<%= form_with model: @article, local: true do |form| %>
    <% if @article.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@article.errors.count, "error") %>
                prohibited this article from being saved:
            </h2>
            <ul>
                <% @article.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
    </p>
    <p>
        <%= form.label :cardText %><br>
        <%= form.text_field :cardText %>
    </p>
    <p>
        <%= form.label :text %><br>
        <%= form.text_area :text %>
    </p>
    <p>
        <%= form.label :picture %> <br>
        <%= form.file_field :picture %>
    <p>
        <p>
        <%= form.label :textMid %><br>
        <%= form.text_area :textMid %>
    </p>
    <p>
        <%= form.label :pictureMid %> <br>
        <%= form.file_field :pictureMid %>
    <p>
        <p>
        <%= form.label :textBott %><br>
        <%= form.text_area :textBott %>
    </p>
    <p>
        <%= form.label :pictureBott %> <br>
        <%= form.file_field :pictureBott %>
    <p>
        <%= form.submit %>
    </p>
<% end %>
